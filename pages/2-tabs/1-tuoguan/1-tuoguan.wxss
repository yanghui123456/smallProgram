page,.trusteeship{
  width:100%;
  height:100%;
}
.trusteeship{
  background: #0930D5; 
  position:fixed;
  top:0;
  left:0;
  padding:0 4%;
  box-sizing: border-box;
  overflow: auto;
  -webkit-overflow-scrolling:touch;    
}
.content{
  width:100%;
  border-radius: 10px;
  margin-bottom:20px;
  overflow: auto;
  -webkit-overflow-scrolling:touch;  
}
.message{
  width:100%;
  background: rgb(248,139,19);
  padding-bottom:10px;
}
.user-info{
  width:100%;
  padding-bottom:20px;
  overflow: hidden;
  position: relative;
}
.user-base-info,.user-communication{
  width:100%;
  padding-left:28%;
  box-sizing: border-box;
}
.user-base-info{
  font-size:17px;
  margin-top:28px;
  padding-right:4%;
  box-sizing: border-box;
}
.user-head-img{
  width:60px;
  height:60px;
  position: absolute;
  top:50%;
  left:5.7%;
  margin-top:-24px;
  border-radius: 50%;
}
.user-communication{
  margin-top:-5px;
}
.tel{
  margin-right:20px;
  position: relative;
  padding-left:15px;
  display: inline-block;
}
.icon{
  width:15px;
  height:15px;
  position: absolute;
  top:0;
  left:0;
}
.talk{
  width:92.8%;
  height:220px;
  margin:10px 0 0 3.6%;
  border-radius: 20px;
  position: relative;
}
.talk-triangle{
  width:10px;
  height:10px;
  transform: rotate(45deg);
  position: absolute;
  top:-5px;
  left:11%;
  overflow: hidden;
}
.talkUser{
  width:100%;
  color:rgb(204,204,204);
  position: absolute;
  top:25px;
  left:0;
  padding-left:25px;
  box-sizing: border-box;
}
.talk-area{
  width:100%;
  height:100%;
  padding:25px 25px 32px 25px;
  box-sizing: border-box;
  position: absolute;
  top:0;
  left:0;
}
.text-number{
  width:100%;
  position: absolute;
  bottom:0;
  left:0;
  text-align: right;
  padding-right:25px;
  box-sizing: border-box;
  margin-bottom:20px;
}
.tab-trapezoid{
  width:100%;
  height:35px;
  padding:0 17%;
  box-sizing: border-box;
}
.trapezoid-item{
   height:0;  
   width:12%;  
   border-top:34px solid rgb(254,161,3);
   border-left:16px solid transparent;  
   border-right:16px solid transparent;
   float: left;
   border-top-right-radius: 0px;
   border-top-left-radius: 0px;
   border-bottom-left-radius: 22px;
   border-bottom-right-radius: 22px;
   position: relative;
}
.trapezoid-active{
  border-top:34px solid white;
}
.trapezoid-icon{
  width:13px;
  height:13px;
  position: absolute;
  top:-30px;
  left:54%;
  margin-left:-8px;
}
.trapezoid-text{
  width:100%;
  color:rgb(255,238,191); 
  position: absolute;
  top:-15px;
  left:0;
}
.trapezoid-active .trapezoid-text{
  color:rgb(248,124,16); 
}
.user-number{
  width:100%;
  height:85px;
}
.number,.text{
  width:100%;
}
.number{
  font-size:26px;
  color:rgb(255,162,0);
  font-weight: 700;
  margin-top:12px;
}
.text,.unit{
  font-weight: normal;
}
.number-item{
  width:50%;
  height:100%;
  float: left;
}
.trusteeship-btn{
  width:84%;
  height:44px;
  line-height: 44px;
  padding:0 8%;
  background: rgb(255,166,1);
  box-sizing: border-box;
  margin-left:8%;
  border-radius: 22px;
  box-shadow: 0 3px 5px 2px #FFC965;
  text-shadow: -1px 0 #FF7C00;
  margin-bottom:20px;
}
.user-evaluate{
  width:100%;
  margin-bottom:20px;
}