/* pages/custom-component/app-download/app-download.wxss */
.single-paket-head,.paket-detail,.detail-name,.detail-time,.htb-explain,.explain-list,.list-item,.downList{
  width:100%;
  box-sizing: border-box;
}
.detail-name{
  padding:20px 4% 5px 15.6%;
}
.detail-time{
  padding:0 4% 0 15.6%;
}
.detail-img{
  width:32px;
  height:32px;
  background: black;
  position: absolute;
  top:21.5px;
  left:4%;
  border-radius: 50%;
}
.detail-htb{
  height:100%;
  line-height: 75px;
  color:rgb(228,54,35);
  position: absolute;
  top:0;
  right:4%;
}
.htb-explain{
  height:90px;
  line-height: 90px;
  font-size:11px;
  color:rgb(153,153,153);
  text-align: center;
  position: relative;
}
.left-line,.right-line{
  width:33.3%;
  height:2px;
  border-bottom:1px dashed rgb(153,153,153);
  position: absolute;
  top:42px;
}
.left-line{
  left:4%;
}
.right-line{
  right:4%;
}
.list-item{
  color:rgb(102,102,102);
  text-indent: 2em;
  margin-top:3px;
  font-size:12px;
}
.mt{
  margin-top:6px;
}
.explain-list{
  padding:0 4%;
  text-align:left;
  margin-bottom:12px;
  font-size:12px;
  color:rgb(51,51,51);
}
.downList{
  position: relative;
  height:40px;
  margin:4px 0 10px 0;
}
.ios,.android{
  width:35%;
  height:40px;
  position: absolute;
  top:0;
}
.ios{
  left:7.5%;
}
.android{
  right:7.5%;
}