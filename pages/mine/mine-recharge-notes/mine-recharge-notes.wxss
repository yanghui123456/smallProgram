/* pages/mine/mine-recharge-notes/mine-recharge-notes.wxss */
page,.recharge-notes{
  width:100%;
  height:100%;
  background: rgb(245,245,245);
}
.recharge-notes{
  position: fixed;
  top:0;
  left:0;
  overflow: auto;
  -webkit-overflow-scrolling:touch;
}
.item{
  width:100%;
  height:51px;
  border-bottom:1px solid rgb(245,245,245);
  box-sizing: border-box;
  background: white;
}
.left,.right{
  height:51px;
  line-height: 51px;
}
.left{
  float: left;
  padding-left:4%;
}
.right{
  float: right;
  padding-right:4%;
  color:rgb(103,103,103);
}
.no-record{
  width:100%;
  height:100%;
  position: absolute;
  top:0;
  left:0;
}
.nothing{
  width:95px;
  height:80px;
  margin-top:50%;
}
.no-text{
  width:100%;
  color:rgb(204,204,204);
  margin:10px 0 60px 0;
}
.czBtn{
  color:rgb(102,214,152);
  border:1px solid rgb(102,214,152);
  padding:4px 8px;
  border-radius: 5px;
}