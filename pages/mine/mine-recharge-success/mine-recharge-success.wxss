/* pages/mine/mine-recharge-success/mine-recharge-success.wxss */
page,.recharge-success{
  width:100%;
  height:100%;
}
.recharge-success{
  position: fixed;
  top:0;
  left:0;
}
.success-tips,.number,.text{
  width:100%;
}
.success-tips{
  color:rgb(85,209,140);
  margin-top:30px;
}
.succecss-icon{
  width:12px;
  height:12px;
  margin-right:5px;
  vertical-align: middle;
}
.number{
  font-size:32px;
  margin-top:40px;
}
.text{
  margin:14px 0 47px 0;
}
.recharge-info{
  width:92%;
  margin-left:4%;
  height:41px;
  line-height: 41px;
  border-bottom:1px solid rgb(245,245,245);
  box-sizing: border-box;
  position: relative;
}
.right{
  position: absolute;
  top:0;
  right:0;
}