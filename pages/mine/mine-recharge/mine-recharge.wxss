page,.recharge{
  width:100%;
  height:100%;
}
.recharge{
  position: fixed;
  top:0;
  left:0;
}
.title,.title2,.recharge-list{
  width:100%;
  padding:0 4%;
  box-sizing: border-box;
}
.title{
  font-size:20px;
  margin-top:30px;
}
.title2{
  margin-top:8px;
}
.recharge-list{
  margin-top:30px;
}
.list-group{
  width:100%;
  height:58px;
  margin-bottom:8px;
}
.item{
  height:58px;
  width:32%;
  float: left;
  border-radius: 5px;
  border:1px solid rgb(246,161,34);
  box-sizing: border-box;
  position: relative;
}
.span{
  width:100%;
  height:100%;
  position: absolute;
  top:0;
  left:0;
}
.item2{
  margin:0 2%;
}
.htb,.price{
  width:100%;
}
.htb{
  margin-top:12px;
}
.record{
  width:100%;
  height:30px;
  line-height: 30px;
  position: absolute;
  bottom:45px;
  left:0;
}
.line{
  width:1px;
  height:10px;
  background: rgb(194,194,194);
  position:absolute;
  top:10px;
  left:50%;
}
.left,.right{
  width:50%;
  height:30px;
  float: left;
  color:rgb(1,149,249);
  box-sizing: border-box;
}
.left{
  padding-right:13%;
  text-align: right;
}
.right{
  padding-left:13%;
  text-align: left;
}