/* pages/mine/mine-team-no/mine-team-no.wxss */
page,.noTeam{
  width:100%;
  height:100%;
  position: relative;
  background: rgb(245,245,245);
}
.noTeamTop{
  width:100%;
  height:100%;
  position: absolute;
  top:0;
  left:0;
  padding-bottom:45px;
  box-sizing: border-box;
  overflow: auto;
  -webkit-overflow-scrolling:touch;
}
.teamHead{
  width:100%;
  background: rgb(255,166,2);
  padding:20px 0 30px 0;
}
.noJoin{
  width:100%;
  font-size: 20px;
  margin-top:14px;
  letter-spacing: 1pt;
}
.teamImg{
  width:20%;
  height:55px;
}
.creatTeam{
  width:100%;
  font-size:17px;
  margin:30px 0 20px 0;
}
.steps{
  width:100%;
  overflow: hidden;
}
.stepImg{
  width:40px;
  height:40px;
}
.stepItem{
  width:20%;
  float: left;
}
.tipsTitle,.tipsItem{
  width:100%;
  padding:0 4%;
  box-sizing: border-box;
}
.tipsTitle{
  margin-top:30px;
}
.tipsItem{
  margin-top:4px;
}
.noTeamBottom{
  width:100%;
  height:45px;
  line-height: 45px;
  position: fixed;
  bottom:0;
  left:0;
}
.left,.right{
  float: left;
}
.left{
  width:66%;
}
.right{
  width:34%;
}