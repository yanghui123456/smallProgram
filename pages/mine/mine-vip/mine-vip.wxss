/* pages/mine/mine-vip/mine-vip.wxss */
page,.vip{
  width:100%;
  height:100%;
  background: rgb(245,245,245);
}
.vip{
  position: fixed;
  top:0;
  left:0;
}
.vip-head,.vip-item{
  width:100%;
}
.vip-item{
  height:61px;
  line-height: 61px;
  padding:0 4%;
  border-bottom:1px solid rgb(245,245,245);
  box-sizing: border-box;
  background: white;
}
.forever{
  background: rgb(255,250,242);
  margin-top:-13px;
}
.recommend{
  background: rgb(243,85,78);
  margin-left:7px;
  padding:2px 5px; 
  border-radius: 5px;
}
.unit{
  color:rgb(255,191,0);
}
.right{
  padding:1px 16px;
  border:1px solid rgb(255,164,34);
  border-radius: 5px;
  float: right;
  height:24px;
  line-height: 24px;
  margin-top:15px;
}