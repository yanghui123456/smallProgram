page,.weihu,.list{
  width:100%;
  height:100%;
  background: rgb(245,245,245);
}
/*无数据  */
.nothing{
  width:69px;
  height:70px;
  margin-top:50px;
}
.no-text{
  color:rgb(204,204,204);
  margin-bottom:20px;
}
.invit{
  border-radius: 5px;
  padding: 10px 18px;
}
/*有数据  */
.list{
  position: relative;
  overflow: auto;
  -webkit-overflow-scrolling:touch;
}
.item,.info,.detail{
  width:100%;
}
.item{
  height:95px;
  border-bottom:1px solid rgb(245,245,245);
  box-sizing: border-box;
  overflow: hidden;
  position: relative;
}
.cover{
  width:100%;
  height:100%;
  position: absolute;
  top:0;
  left:0;
}
.info,.detail{
  padding-left:22%;
  text-align: left;
  color:rgb(103,103,103);
  box-sizing: border-box;
}
.info{
  margin:24px 0 5px 0;
  height:25px;
  line-height: 25px;
}
.down{
  color:rgb(0,155,255);
  position: absolute;
  bottom:24px;
  left:0;
  padding-left:22%;
  text-align: left;
  box-sizing: border-box;
}
.info-name{
  display: inline-block;
  max-width:40%;
  height:25px;
  line-height: 23px;
  font-size:19px;
  margin-right:15px;
  vertical-align: middle;
}
.headImg{
  width:50px;
  height:50px;
  border-radius: 50%;
  position: absolute;
  top:22.5px;
  left:4%;
}
.call{
  width:34px;
  height:34px;
  position: absolute;
  top:30.5px;
  right:4%;
}
/* 头部背景 */
.infoGroup{
  width:100%;
}
.infoTop{
  width:100%;
  padding-bottom:10px;
  box-shadow: 0px 2px 2px 1px #eee;
}
.infoBack{
  width:97.3%;
  border-radius: 5px;
  margin:5px 1.35% 0 1.35%;
  position: relative;
  background-image: url('http://oss.baoxian.xujinkeji.com/broker/ipCardBack.png');
  background-repeat: no-repeat;
  background-size: 100% 100%;
}
.avater{
  width:109px;
  height:109px;
  border-radius: 50%;
  margin-top:40px;
  border:2px solid white;
  box-sizing: border-box;
  box-shadow: 0px 1px 2px 0px #DF7E09;
}
.avaterCall{
  width:30px;
  height:30px;
  position: absolute;
  top:120px;
  left:50%;
  margin-left:15px;
}
.infoName{
  width:100%;
  font-size:17px;
  margin-top:1px;
}
.infoBd{
  width:100%;
  overflow: hidden;
  margin-top:20px;
  padding-bottom:30px;
}
.infoHalf{
  width:33.3%;
  float: left;
}