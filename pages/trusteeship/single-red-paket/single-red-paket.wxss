page,.single-paket{
  width:100%;
  height:100%;
  background: rgb(245,245,245);
}
.single-paket{
  position: fixed;
  top:0;
  left:0;
  overflow: auto;
}
.single-paket-head{
  height:228px;
  position: relative;
}
.head-img{
  width:100%;
  height:100%;
  position: absolute;
  top:0;
  left:0;
}
.who-paket,.bless{
  width:100%;
  color:rgb(230,72,50);
  position: absolute;
  left:0;
}
.who-paket{
  top:97px;
}
.bless{
  top:117px;
}
.from-img{
  width:41px;
  height:41px;
  border:1px solid white;
  border-radius: 50%;
  position: absolute;
  top:49px;
  left:50%;
  margin-left:-20px;
}
.paket-detail{
  height:41px;
  line-height: 41px;
  background: white;
  padding:0 4%;
  border-bottom:1px solid rgb(245,245,245);
}
.get-detail{
  width:100%;
  height:75px;
  position: relative;
}
.single-paket-head,.paket-detail,.detail-name,.detail-time{
  width:100%;
  box-sizing: border-box;
}
.detail-name{
  padding:20px 4% 5px 15.6%;
}
.detail-time{
  padding:0 4% 0 15.6%;
}
.detail-img{
  width:32px;
  height:32px;
  position: absolute;
  top:21.5px;
  left:4%;
  border-radius: 50%;
}
.detail-htb{
  height:100%;
  line-height: 75px;
  color:rgb(228,54,35);
  position: absolute;
  top:0;
  right:4%;
}