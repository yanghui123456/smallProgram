page,.red-paket{
  width:100%;
  height:100%;
  position: fixed;
  top:0;
  left:0;
  background: rgb(245,245,245);
}
.head-img{
  width:100%;
  height:23%;
  margin-bottom:20px;
}
.money-style{
  width:100%;
  height:60px;
  padding:0 4%;
  box-sizing: border-box;
  position: relative;
}
.style-text{
  height:100%;
  width:22%;
  line-height: 60px;
  float: left;
}
.unit{
  height:60px;
  line-height: 60px;
  position: absolute;
  top:0;
  right:4%;
}
.style-input{
  width:70%;
  height:100%;
  float: left;
  text-align: right;
}
.ht-money{
  width:100%;
  height:44px;
  line-height: 44px;
  padding-left:4%;
  box-sizing: border-box;
}
.ht-number{
  color:rgb(247,161,33);
}
.recharge{
  display: inline-block;
  height:100%;
  color:rgb(0,150,255);
}
.give-money{
  width:92%;
  margin-left:4%;
  height:44px;
  line-height: 44px;
  background: rgb(212,50,32);
  border-radius: 5px;
}
.area{
  width:100%;
  height:120px;
  margin:15px 0 30px 0;
  position: relative;
}
.textarea{
  width:100%;
  height:100%;
  padding:20px 4%;
  box-sizing: border-box;
}
.areaPlaceholder{
  width:100%;
  position: absolute;
  top:20px;
  left:0;
  padding-left:4%;
  box-sizing: border-box;
}