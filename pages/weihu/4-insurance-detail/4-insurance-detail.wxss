/* pages/weihu/4-user-detail/4-user-detail.wxss */
page,.ins-detail{
  width:100%;
  height:100%;
  background: rgb(245,245,245);
}

.pay-record,.pay-premium,.analysis{
  width:100%;
}
.pay-record{
  height:26px;
  line-height: 26px;
  border-bottom:1px solid rgb(240,239,244);
  color:rgb(147,147,147);
}
.pay-premium{
  height:56px;
  margin-bottom:10px;
}
.premium-item{
  width:50%;
  height:100%;
  float: left;
}
.premium-num{
  margin-top:12px;
}
/*详情  */
.ins-details{
  width:100%;
  height:496px;
  overflow: hidden;
  background: url('https://dev-haitun-public-read.oss-cn-hangzhou.aliyuncs.com/small_routine/20180718092503.png');
  background-size: 100% 100%;
  background-repeat: no-repeat;
}
.insurance-img{
  width:45%;
  margin-left:27.5%;
  height:35px;
}
.detail{
  width:87%; 
  height:400px; 
  background: white;
  margin-left:6.5%; 
  border-radius: 20px;
  position: relative;
  overflow: hidden;
  margin-top:35px;
}
.detail-name{
  font-size:19px;
  margin:30px 0 5px 0;
  color: #0099ff;
}
.insured-name{
  margin-bottom:24px;
}
.moreGive{
  color:rgb(186,186,186);
  margin-bottom:-2px;
}
.giveMoney{
  font-size:34px;
  margin-bottom:30px;
}
.moreBtn{
  width:100%;
  color:rgb(36,203,255);
  position: absolute; 
  bottom:20px; 
}
.duty-list{
  width:100%;
  height:150px;
}
.duty-item{
  width:100%;
  height:30px;
}
.duty-left, duty-right{
  width:50%;
  height:100%;
  float: left;
}
.duty-right{
  color:rgb(93,93,93);
}
/*投保人、被保人信息  */
.info-list{
  margin-bottom:10px;
}
.info-item{
  padding:0 8% 0 4%;
  height:51px;
  line-height: 51px;
  border-bottom:1px solid rgb(245,245,245);
  box-sizing: border-box;
  position: relative;
}
.info-left{
  float: left;
}
.info-right{
  float: right;
}
.join{
  width:30px;
  height:25px;
  position: absolute;
  top:13px;
  right:0%;
}
.mt0{
  margin-bottom:0;
}
.phoneNum{
  color:rgb(7,115,223);
}
/*更多保障责任  */
.more-duty{
  width:100%;
  height:100%;
  position: fixed;
  top:0;
  left:0;
  background: white;
}
.mask{
  width: 100%;
  height: 78%;
  padding: 6.7% 3.7% 0 3.7%;
  overflow: auto;
  -webkit-overflow-scrolling:touch;
  background-color: rgba(255, 255, 255, 0.9);
  box-sizing: border-box
}
.close-duty{
  display: inline-block;
  width: 30px;
  height: 30px;
  position: absolute;
  left: 46%;
  bottom: 15%;
}
.safe-item{
  width: 100%;
  height: 33px;
  border-bottom: 1px dashed rgb(213, 217, 225);
  box-sizing: border-box;
}
.safe-detail,.safe-style{
  display: inline-block;
  height: 100%;
  line-height: 33px;
}
.safe-style{
  color: rgb(165, 167, 173);
  float: left;
}
.safe-detail{
  color: rgb(111, 115, 124);
  float: right;
}
.ins-detail-img{
  width:100%;
  height:100%;
}